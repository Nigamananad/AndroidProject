<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChapterDetailActivity">


    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvVerses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textSize="16sp" />

        <!-- ðŸ”½ English Summary Section -->
        <TextView
            android:id="@+id/tvEngSummaryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English Summary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvEngSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="16sp"
            android:clickable="true"
            android:paddingTop="4dp" />

        <!-- ðŸ”½ Hindi Summary Section -->
        <TextView
            android:id="@+id/tvHindiSummaryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hindi Summary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvHindiSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="16sp"
            android:clickable="true"
            android:paddingTop="4dp" />

    </LinearLayout>
</ScrollView>